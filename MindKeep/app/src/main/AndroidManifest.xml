<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anatoliyadamitskiy.a_adamitskiy_android_usersanddata" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="EverKeep"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".NewNoteActivity"
            android:label="New Note"
            android:screenOrientation="portrait"/>
        <activity android:name=".NewListNoteActivity"
            android:label="New List Note"
            android:screenOrientation="portrait"/>
        <activity android:name=".NewImageNoteActivity"
            android:label="New Image Note"
            android:screenOrientation="portrait" />
        <activity android:name=".LogInActivity"
            android:theme="@style/AppBaseThemeNoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name=".SignUpActivity"
            android:theme="@style/AppBaseThemeNoActionBar"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
